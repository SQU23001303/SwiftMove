@model Swift_Move.Models.ServiceList

@{
    ViewData["Title"] = "Delete Service";
}

<h2 class="text-white">Delete Service</h2>

<div class="alert alert-danger">
    Are you sure you want to delete this service?
</div>

<div class="text-white">
    <h4>@Model.Title</h4>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Staff Required:</strong> @Model.StaffRequired</p>
    <p><strong>Price:</strong> £@Model.Price.ToString("F2")</p>
</div>

<form asp-action="DeleteService" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

