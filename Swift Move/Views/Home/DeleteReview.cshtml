@model Swift_Move.Models.Review

@{
    ViewData["Title"] = "Delete Review";
}

<div class="container mt-5 text-white">
    <h2>Delete Review</h2>
    <p>Are you sure you want to delete this review?</p>

    <dl class="row">
        <dt class="col-sm-2">Rating</dt>
        <dd class="col-sm-10">@Model.Rating / 5</dd>

        <dt class="col-sm-2">Comment</dt>
        <dd class="col-sm-10">@Model.Comment</dd>

        <dt class="col-sm-2">Created</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("dd/MM/yyyy")</dd>
    </dl>

    <form asp-action="DeleteReviewConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Portal" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>

