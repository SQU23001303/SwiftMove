@model Swift_Move.Models.Review

@{
    ViewData["Title"] = "Delete Review";
}

<h2 class="text-white">Delete Review</h2>

<p class="text-white">Are you sure you want to delete this review?</p>

<div class="text-white">
    <dl class="row">
        <dt class="col-sm-2">Rating</dt>
        <dd class="col-sm-10">@Model.Rating / 5</dd>

        <dt class="col-sm-2">Comment</dt>
        <dd class="col-sm-10">@Model.Comment</dd>
    </dl>

    <form asp-action="DeleteReview" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Portal" class="btn btn-secondary">Cancel</a>
    </form>
</div>

