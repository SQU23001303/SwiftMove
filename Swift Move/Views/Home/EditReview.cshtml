@model Swift_Move.Models.Review

@{
    ViewData["Title"] = "Edit Review";
}

<div class="container mt-5 text-dark">
    <h2>Edit Your Review</h2>

    <form asp-action="EditReview" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Rating" class="form-label">Rating (1-5)</label>
            <input asp-for="Rating" class="form-control" type="number" min="1" max="5" />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Comment" class="form-label">Comment</label>
            <textarea asp-for="Comment" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Portal" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



